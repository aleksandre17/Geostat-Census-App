<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="ms_stepperStyle">@style/NiceStepperStyle</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/slide</item>
    </style>

    <style name="NiceStepperStyle">
        <item name="ms_stepperType">progress_bar</item>
        <item name="ms_activeStepColor">#FFFFFF</item>
        <item name="ms_inactiveStepColor">#006867</item>
        <item name="ms_backButtonColor">#FFFFFF</item>
        <item name="ms_nextButtonColor">#FFFFFF</item>
        <item name="ms_completeButtonColor">@android:color/holo_red_dark</item>
        <item name="ms_bottomNavigationBackground">@android:color/holo_blue_dark</item>
    </style>

    <style name="Theme.TestApplication.NoActionBar" parent="Theme.TestApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="slide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.TestApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TestApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="simpletooltip_default" parent="@android:style/TextAppearance.Medium" />

</resources>